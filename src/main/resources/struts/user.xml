<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="com.haozileung.poker.user" namespace="/User"
		extends="json-default">
		<interceptors>
			<interceptor name="auth"
				class="com.haozileung.poker.common.webapp.interceptor.AuthorityInterceptor" />
			<interceptor name="pass"
				class="com.haozileung.poker.common.webapp.interceptor.PassInterceptor" />
		</interceptors>
		<default-interceptor-ref name="auth" />
		
				<global-results>
			<result name="error">/error.html</result>
			<result name="login" type="redirectAction">
				<param name="actionName">login</param>
				<param name="namespace">/</param>
			</result>
		</global-results>

		<action name="userAction" class="com.haozileung.poker.action.user.UserAction">
			<result name="fetchUserList">/fetchUserList.jsp</result>
			<result name="addUser" type="redirect">userAction!fetchUserList</result>
			<result name="deleteUser" type="json"></result>
		</action>
		<action name="*">
			<result>/{1}.jsp</result>
		</action>
	</package>
</struts>
